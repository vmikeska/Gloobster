
@using Gloobster.Common
@using Newtonsoft.Json
@using System.Linq;
@using Microsoft.AspNet.Mvc.Rendering

@model Gloobster.Portal.ViewModels.TravelBViewModel

@{
    ViewBag.MenuGroup = "TravelB";
    Layout = "_LayoutNew";
    ViewBag.BodyClass = "travelb-home";
}

