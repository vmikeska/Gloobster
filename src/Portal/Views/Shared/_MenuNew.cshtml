@using System.Threading.Tasks
@using Gloobster.Common
@using Gloobster.Portal
@using Gloobster.Portal.ViewModels;
@model ViewModelBase

<div class="menu_all">

    <div class="wrapper">

        <div class="logo_all">
            
            <a href="/">
                <img src="/images/n/logo.svg"/>
            </a>
        </div>

        <nav class="links">
            <div>
                <a href="#">Dashboard</a>
            </div>
            <div>
                <a href="/Destination/planning">Fly Tickets</a>
            </div>
            <div>
                <a href="/TravelB/home">Travel Buddy</a>
            </div>
            <div>
                <a href="/@RoutingConsts.PlannerMenuName/grid">@Model.W("MenuTrips", "layout")</a>
            </div>
            <div>                
                <a class="MenuPins" href="/@RoutingConsts.PinsMenuName">@Model.W("MenuPins", "layout")</a>
            </div>
            <div>                
                <a class="MenuWiki" href="/@RoutingConsts.WikiMenuName">@Model.W("MenuWiki", "layout")</a>
            </div>
        </nav>

      
        <div class="icons_all">
            <div class="icons">

                <div class="icon">
                    <a class="icon-my-data" href="/@RoutingConsts.UserDetailMenuName"></a>
                </div>

                <div class="icon">
                    <a class="icon-friends" href="/@RoutingConsts.FriendsMenuName"></a>
                </div>

                <div class="icon">
                    <a class="icon-envelope" href="/@RoutingConsts.NotifsMenuName"></a>

                    @if (Model.NotificationCount > 0)
                    {
                        <div class="notif">@Model.NotificationCount</div>                        
                    }

                    
                </div>

                <div class="icon">
                    <a id="logoutUser" class="icon-logout" href="#"></a>
                </div>

            </div>
        </div>

    </div>
</div>




