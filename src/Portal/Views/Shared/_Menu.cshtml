@using System.Threading.Tasks
@using Gloobster.Common
@using Gloobster.Portal
@using Gloobster.Portal.ViewModels;
@model ViewModelBase

<ul id="menu" class="menu-header table">	
    <li><a class="MenuPinBoard" href="/@RoutingConsts.PinsMenuName">@Model.W("MenuPins", "layout")</a></li>
    <li><a class="MenuTrip" href="/@RoutingConsts.PlannerMenuName/grid">@Model.W("MenuTrips", "layout")</a></li>
    <li><a class="MenuWiki" href="/@RoutingConsts.WikiMenuName">@Model.W("MenuWiki", "layout")</a></li>

    @if (GloobsterConfig.IsLocal)
    {
        <li><a class="TravelB" asp-controller="TravelB" asp-action="Home">Trav bud</a></li>
        <li><a class="Search" asp-controller="Destination" asp-action="Planning">Flights</a></li>
        @*<li><a class="Search" asp-controller="Destination" asp-action="Chat">SP Chat</a></li>*@
    }

    @if (!Model.IsUserLogged && !(Model is ViewModelHome))
    {
        <li><a id="MenuRegister" class="strong popup2-target" data-target="#popup-joinSoc" href="#">@Model.W("MenuRegister", "layout")</a></li>
    }
    
</ul>




