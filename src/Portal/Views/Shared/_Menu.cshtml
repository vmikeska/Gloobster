@using System.Threading.Tasks
@using Gloobster.Portal.ViewModels;
@model ViewModelBase

<ul id="menu" class="menu-header table">	
	<li><a id="MenuPinBoard" asp-controller="PinBoard" asp-action="Pins">@Model.W("MenuPins", "layout")</a></li>
    <li><a id="MenuTrip" asp-controller="Trip" asp-action="List">@Model.W("MenuTrips", "layout")</a></li>
    <li><a id="MenuWiki" asp-controller="Wiki" asp-action="Home">@Model.W("MenuWiki", "layout")</a></li>

    @*<li><a id="MenuPlanning" asp-controller="Destination" asp-action="Planning">Planning</a></li>*@

    @if (!Model.IsUserLogged && !(Model is ViewModelHome))
    {
        <li><a id="MenuRegister" class="strong popup2-target" data-target="#popup-joinSoc" href="#">@Model.W("MenuRegister", "layout")</a></li>
    }
    
</ul>

<script>	
	var name = "@ViewBag.MenuGroup";
	$("#Menu" + name).addClass("active");
</script>


