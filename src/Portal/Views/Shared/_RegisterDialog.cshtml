

<div id="socDlg" class="login-all">
    <div class="top-line"></div>
    <div class="cont">

        <div class="txt">
            @Model.W("JoinInfoMessage", "login")
        </div>
        <div class="links">
            <a id="fbBtnReg" class="facebook" href="#"><span class="icon-facebook2"></span>@Model.W("FbButtonPair", "login")</a>
            <a id="twitterBtnReg" class="twitter" href="#"><span class="icon-twitter"></span>@Model.W("TwButtonPair", "login")</a>
            <a id="googleBtnReg" class="google" href="#"><span class="icon-google-plus"></span>@Model.W("GoButtonPair", "login")</a>
            <a id="emailBtn" class="email" href="#">@Model.W("SignIn", "login")<span class="via">@Model.W("ViaEmail", "login")</span></a>
        </div>  
        <div class="tos">@Model.W("ByJoining", "login") <a href="/legal/TermsAndConds">@Model.W("TermsOfService", "login")</a></div>
        
        <a class="close" href="#"><span class="icon-close-cross"></span></a>
    </div>
</div>


    <div id="emailDlg" class="login-all" style="display: none">
        <div class="top-line"></div>
        <div class="cont">

            <div class="txt">
                @Model.W("JoinEmailMessage", "login")                
            </div>
            <div class="links">
                <span>@Model.W("Mail", "login")</span>
                <input id="email" type="email" placeholder="@Model.W("Mail", "login")" data-valid="false">
                <span>@Model.W("Password", "login")</span>
                <input id="password" type="password">

                <a id="emailReg" class="lbtn">@Model.W("JoinButton", "login")</a>                
            </div>
            <div class="tos">@Model.W("ByJoining", "login") <a href="/legal/TermsAndConds">@Model.W("TermsOfService", "login")</a></div>

            <a class="close" href="#"><span class="icon-close-cross"></span></a>
        </div>
    </div>
