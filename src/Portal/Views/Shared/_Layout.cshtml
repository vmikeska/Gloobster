<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Goobster</title>

        
        <link rel="stylesheet" href="~/css/site.css" />

	    <script src="~/lib/jquery/dist/jquery.js"></script>
				<script src="~/lib/jquery.cookie/jquery.cookie.js"></script>
				<script src="~/lib/lodash/lodash.js"></script>
				


				@*<script src="//ajax.aspnetcdn.com/ajax/jquery/jquery-2.1.4.min.js"
								asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
								asp-fallback-test="window.jQuery">
				</script>*@
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a asp-controller="Home" asp-action="Index" class="navbar-brand">Gloobster</a>
                </div>
                <div class="navbar-collapse collapse">
	                <ul class="nav navbar-nav">
		                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
		                <li><a asp-controller="Home" asp-action="Map">Map</a></li>
		                <li><a asp-controller="Home" asp-action="Authorize">Authorize</a></li>
		                <li><a asp-controller="Friends" asp-action="Friends">Friends</a></li>
		                <li><a href="javascript:clickAuthorize()" id="authorize">Authorize Twitter</a></li>
	                </ul>

                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; 2015 - Gloobster</p>
            </footer>
        </div>

        

        @RenderSection("scripts", required: false)
    </body>
</html>
