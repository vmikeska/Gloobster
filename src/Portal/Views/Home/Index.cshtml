@using Gloobster.Portal.ViewModels
@using System.Linq
@using System.Threading.Tasks
@using Gloobster.Common
@using Gloobster.Portal
@using Microsoft.AspNet.Mvc.Rendering
@using Microsoft.Data.Entity.Metadata.Internal
@model ViewModelHome

@{
    ViewData["Title"] = "gloobster.com - the only portal you need to travel the world";
    ViewBag.BodyClass = "homepage";
}


@Html.Partial("GAnalytics")

@if (GloobsterConfig.UseMiniScripts)
{
    <script src="/jsb/index.js" type="text/javascript" data-notbuild="true"></script>
}
else
{
    <script src="/js/Deals/DealsPlaceSearch.js" type="text/javascript"></script>
    <script src="/js/Views/AirLoc.js" type="text/javascript"></script>
    <script src="/js/Views/HomePageView.js" type="text/javascript"></script>
    <script src="/js/views/settingsutils.js" type="text/javascript"></script>    
}


<div class="title-block-all">

    <div class="title-photo">
        <div class="bck"></div>

        <div class="darker"></div>
    </div>

    <div class="search-form wrapper">
        
        <h1 class="motto">Gloobster - cheapest flights</h1>

        <div class="inner">

            <div class="search-group places-row">

                <div class="search-field">
                    <div class="capt">From</div>
                    <div class="ctrl">
                        <div id="searchFrom"></div>
                    </div>
                </div>

                <div class="search-field">
                    <div class="capt">To</div>
                    <div class="ctrl">
                        <div id="searchTo"></div>
                    </div>
                </div>

            </div>

            <div class="search-group">

                <div class="search-field">
                    <div class="capt">Depart</div>
                    <div class="ctrl">
                        <div id="dateFrom"></div>
                    </div>
                </div>

                <div class="search-field">
                    <div class="capt">Return</div>
                    <div class="ctrl">
                        <div id="dateTo"></div>
                    </div>
                </div>

            </div>

            <div class="sec-row">
                <a href="#" id="btnSearch" class="lbtn2 green-orange bold">Search deals</a>
            </div>

        </div>
    </div>

</div>

<div class="deals-block-all">

    <div class="wrapper">
        <h1 class="motto">Are you fexible on time? Try our new best deals search!</h1>

        <div class="icons">
            <div class="ico">
                <img class="svg-img" src="/images/n/fly-pin.svg" />
            </div>
            <div class="ico">
                <img class="svg-img" src="/images/n/fly-comp.svg" />
            </div>
            <div class="ico">
                <img class="svg-img" src="/images/n/fly-plane.svg" />
            </div>
        </div>

        <div class="labels">
            <div class="label">1. Set your home city</div>
            <div class="label">2. Customize your dashboard</div>
            <div class="label">3. Get the best deals</div>
        </div>

        <div class="loc">
            <div id="currentCity" class="dropdown">
                <input class="inputed" type="text" placeholder="Set your home city">
                <ul></ul>
            </div>
        </div>
    </div>

</div>




<div class="social wrapper">
    
    <h1 class="motto">@Model.W("TryOurComponents")</h1>

    <div class="blocks">
        
        <div class="item mr">
            <div class="image">
                <span class="icon-ico-travel-buddy blue"></span>
            </div>
            <div class="name">
                <span class="blue">@Model.W("CompTitleTravelBuddy")</span>
            </div>
            <div class="txt">@Model.W("CompBodyTravelBuddy")</div>
            <div class="btn">
                <a class="blue" href="/@RoutingConsts.TravelBuddyMenuName">@Model.W("CompBtnTravelBuddy")</a>
            </div>
        </div>

        <div class="item mr">
            <div class="image">
                <span class="icon-ico-organizer green"></span>
            </div>
            <div class="name">
                <span class="green">@Model.W("CompTitleOrganizer")</span>
            </div>
            <div class="txt">@Model.W("CompBodyOrganizer")</div>
            <div class="btn">
                <a class="green" href="/@RoutingConsts.PlannerMenuName/grid">@Model.W("CompBtnOrganizer")</a>
            </div>
        </div>

        <div class="item mr">
            <div class="image">
                <span class="icon-ico-wiki orange"></span>                
            </div>
            <div class="name">
                <span class="orange">@Model.W("CompTitleWiki")</span>
            </div>
            <div class="txt">@Model.W("CompBodyWiki")</div>
            <div class="btn">
                <a class="orange" href="@RoutingConsts.WikiMenuName">@Model.W("CompBtnWiki")</a>
            </div>
        </div>

        <div class="item">
            <div class="image">
                <span class="icon-ico-travel-map yellow"></span>                
            </div>
            <div class="name">
                <span class="yellow">@Model.W("CompTitlePinboard")</span>
            </div>
            <div class="txt">@Model.W("CompBodyPinboard")</div>
            <div class="btn">
                <a class="yellow" href="@RoutingConsts.PinsMenuName">@Model.W("CompBtnPinboard")</a>
            </div>
        </div>

    </div>

</div>

@Html.Partial("_DestPlaceCombo")

<script>
    
    function onBodyLoad() {
        currentView = new Views.HomePageView();
    }

</script>
