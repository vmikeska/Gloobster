@using Gloobster.Portal.ViewModels
@using System.Linq
@using System.Threading.Tasks
@using Gloobster.Common
@using Gloobster.Portal
@using Microsoft.AspNet.Mvc.Rendering
@using Microsoft.Data.Entity.Metadata.Internal
@model ViewModelHome

@{
    ViewData["Title"] = "gloobster.com - the only portal you need to travel the world";
    ViewBag.BodyClass = "homepage";
}


@Html.Partial("GAnalytics")

@if (GloobsterConfig.UseMiniScripts)
{
    <script src="/jsb/index.js" type="text/javascript" data-notbuild="true"></script>
}
else
{
    <script src="/js/Views/AirLoc.js" type="text/javascript"></script>
    <script src="/js/Views/HomePageView.js" type="text/javascript"></script>
    <script src="/js/views/settingsutils.js" type="text/javascript"></script>    
}

<div class="title-show-all">
    <div class="photo">
        <div class="empty-fill"></div>   
    </div>
    
    <div class="photo-small"></div>

    <div class="wrapper">
        <div class="main-fill"></div>
        

        <div class="text-area">
            <h1 class="motto">@Model.W("MainMotto")</h1>

            @*<a class="link" href="#">Learn more</a>*@
        </div>

    </div>
    
</div>



    <div class="fly_all">

        <div class="motto">
            <span>@Model.W("FlyTicketSearch")</span>
        </div>

        <div class="icons">

            <div class="icon block mr">
                <img class="svg-img"  src="/images/n/fly-pin.svg"/>
                <div class="txt c1">@Model.W("SetYourHomeLocation")</div>
            </div>
            <div class="pointer block mr">
                <div class="center_cont">
                    <div class="dashed_cont">
                        <div class="line"></div>
                    </div>
                    <div class="arrow"><img class="svg-img" src="/images/n/fly-arrow.svg"/>
                    </div>
                </div>
            </div>
            <div class="icon block mr">
                <img class="svg-img" src="/images/n/fly-comp.svg"/>
                <div class="txt">@Model.W("CustomizeYourDashboard")</div>
            </div>
            <div class="pointer block mr">
                <div class="center_cont">
                    <div class="dashed_cont">
                        <div class="line"></div>
                    </div>
                    <div class="arrow"><img class="svg-img" src="/images/n/fly-arrow.svg"/>
                    </div>
                </div>
            </div>
            <div class="icon block">
                <img class="svg-img"  src="/images/n/fly-plane.svg"/>
                <div class="txt">@Model.W("GetDeals")</div>
            </div>

        </div>

        <div class="loc">
            <div id="currentCity" class="dropdown">
                <input class="inputed" type="text" placeholder="@Model.W("HomeCityPlaceholder")">
                <ul>
                </ul>
            </div>
        </div>

    </div>

<div class="social">

    <div class="blocks">

        <div class="motto">@Model.W("TryOurComponents")</div>

    <div class="item mr">
        <div class="image">
            <span class="icon-ico-travel-buddy blue"></span>
        </div>
        <div class="name">
            <span class="blue">@Model.W("CompTitleTravelBuddy")</span>
        </div>
        <div class="txt">@Model.W("CompBodyTravelBuddy")</div>
        <div class="btn">
            <a class="blue" href="/@RoutingConsts.TravelBuddyMenuName">@Model.W("CompBtnTravelBuddy")</a>
        </div>
    </div>

        <div class="item mr">
            <div class="image">
                <span class="icon-ico-organizer green"></span>
            </div>
            <div class="name">
                <span class="green">@Model.W("CompTitleOrganizer")</span>
            </div>
            <div class="txt">@Model.W("CompBodyOrganizer")</div>
            <div class="btn">
                <a class="green" href="/@RoutingConsts.PlannerMenuName/grid">@Model.W("CompBtnOrganizer")</a>
            </div>
        </div>

        <div class="item mr">
            <div class="image">
                <span class="icon-ico-wiki orange"></span>                
            </div>
            <div class="name">
                <span class="orange">@Model.W("CompTitleWiki")</span>
            </div>
            <div class="txt">@Model.W("CompBodyWiki")</div>
            <div class="btn">                
                <a class="orange" href="@RoutingConsts.WikiMenuName">@Model.W("CompBtnWiki")</a>
            </div>
        </div>

        <div class="item">
            <div class="image">
                <span class="icon-ico-travel-map yellow"></span>                
            </div>
            <div class="name">
                <span class="yellow">@Model.W("CompTitlePinboard")p</span>
            </div>
            <div class="txt">@Model.W("CompBodyPinboard")</div>
            <div class="btn">                
                <a class="yellow" href="@RoutingConsts.PinsMenuName">@Model.W("CompBtnPinboard")</a>
            </div>
        </div>

    </div>

</div>

<script>
    
    function onBodyLoad() {
        currentView = new Views.HomePageView();
    }

</script>
