<section class="wrapper margin3">
	<div class="table right">
		<div class="cell bottom">
			<span class="icon-home mright5"></span>
		</div>
		<div id="currentLocation" class="cell h4 middle">
			<small class="display-block">Current location</small>
			<strong>@Model.CityName</strong>, <span>@Model.CountryName</span>
		</div>
		<div class="cell bottom">
			<span class="icon-plane2 mright5 mleft10"></span>
		</div>
		<div class="cell h4 middle">
			<small class="display-block">Home Airport</small>
			@Model.AirportsStr
		</div>
		<div class="cell bottom">
			<a class="icon-wheel blue mleft10 popup-target" data-target="#popup-future" href="#"></a>
		</div>
	</div>
	@*<h1 class="margin2">Planning</h1>*@

	@*<div class="hint orange margin">
		<span class="icon-amplion orange middle mright5"></span>
		Our search engine is now in beta. So bear with us until next release to be out in
