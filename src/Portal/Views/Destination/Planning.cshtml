		<a class="close" href="#">Close</a>
	</div>*@

	<div class="table width100">
		<div class="cell">
			<div id="TimeTab" class="tabs table row">
				<div class="cell">
					<a class="tab active" data-type="0" href="#">Anytime</a>
				</div>
				<div class="cell">
					<a class="tab" data-type="1" href="#">Weekend</a>
				</div>
				<div class="cell">
					<a class="tab" data-type="2" href="#">Custom</a>
				</div>
			</div>
		</div>
		
	</div>

	<div id="tabContent"></div>

	<div class="map margin" id="map"></div>

