@using System.Threading.Tasks
@using Gloobster.Portal.ViewModels
@model BlockVM


<div class="blue-block adminBlock empty-cont" data-sid="@Model.SectionId" data-at="standard" data-id="@Model.SectionId">
    
        <div class="about">            
            <table>
                @Html.Partial("TableItem", Model.InfoByName("PopulationCity"))
            </table>
        </div>
    
        @Html.Partial("NewArticleRating")
    

    @if (Model.Text.ToLower() == "no content")
    {
        @Html.Partial("Empty", new EmptyVM {B = Model.B, Data = "noborder" } )
    }
    else
    {
        <p id="text_@Model.SectionId" class="h3">@Model.Text</p>        
    }

</div>