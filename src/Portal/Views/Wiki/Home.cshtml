@using System.Linq;
@using System.Threading.Tasks
@using Gloobster.Common
@using Gloobster.Entities
@using Gloobster.Portal
@using Gloobster.Portal.ViewModels
@using Microsoft.AspNet.Mvc.Rendering
@using Microsoft.Data.Entity.Metadata.Internal
@model WikiHomeViewModel
@{
    ViewBag.MenuGroup = "Wiki";
    ViewBag.BodyClass = "wiki";
    ViewData["Title"] = "gloobster.com - travel wiki";
    Layout = "_LayoutNew";

    var prague = Model.TextById(3067696);

    var smallArticles = Model.Articles.Where(a => a.GID != 3067696);    
}

@Html.Partial("GAnalytics")

@if (GloobsterConfig.UseMiniScripts)
{    
    <script src="/jsb/wikihome-@(ScriptsVersion.Version).js" type="text/javascript" data-notbuild="true"></script>
}
else
{
    <script src="/js/Views/WikiHomeView.js" type="text/javascript"></script>
    <script src="/js/Views/WikiSearchCombo.js" type="text/javascript"></script>    
}

<div class="wiki_header_all">
    <div class="wiki_header">
        <div class="bck">
            <div class="search_all">
                <div class="circle-bck">

                </div>
                
            </div>

        </div>
    </div>

    <div class="cont">
        <h1>@Model.W("Title")</h1>

        <div>
            <div id="SearchCombo" class="dropdown search">
                <input class="inputed" type="text" placeholder="@Model.W("SearchPlaceholder")">
                <img class="loader" src="/images/loader-gray.gif" style="display: none" />
                <ul style="text-align: left"></ul>
            </div>
        </div>
    </div>
</div>

<div class="wiki_info">

    <div class="block bl">
        <div class="ico"><img class="svg-img" src="/images/n/pencil.svg"/>
        </div>
        <div class="title">
            <h2>@Model.W("MottoForTravelers")</h2>
        </div>
        <div class="text">
            @Model.W("ForTravelersText")
        </div>        
    </div>
    
    <div class="block br">
        <div class="ico"><img class="svg-img" src="/images/n/guy.svg"/>
        </div>
        <div class="title">
            <h2>@Model.W("MottoHelpUs")</h2>
        </div>
        <div class="text">
            @Model.W("HelpUsText")
        </div>        
    </div>
</div>

<h2>Latests Articles</h2>

<div class="wrapper all-articles">

    <div class="wiki_article_wide">

        <div class="photo">
            <div class="bck">
                <img src="/picd/3067696/wt" />
            </div>
        </div>
        <div class="service">
            <div class="title">
                <a href="/wiki/prague">
                    <h2>@prague.Title</h2>
                </a>
            </div>

            @Html.Partial("Stars", prague.Rating)
        </div>

        <p class="txt">
            @Model.SectionText(prague, "Base").Text
        </p>
    </div>
    
    <div class="wiki_articles">

        @foreach (var article in smallArticles)
        {
            @Html.Partial("NewArticle", article)
        }

    </div>

</div>



<div class="counties">

    <h2>Learn more about countries</h2>

    <div class="wrapper">

        @foreach (var block in Model.GetCountryLinks())
        {
            <div class="block">
                @foreach (var item in block)
                {
                    <div class="item">
                        <a href="/wiki/@item.Link">@item.Title</a>
                    </div>
                }
            </div>
        }

    </div>
</div>

<script>
	function onBodyLoad() {
	    currentView = new Views.WikiHomeView();
	}

</script>