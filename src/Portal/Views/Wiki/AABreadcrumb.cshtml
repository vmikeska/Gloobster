
@using System.Threading.Tasks
@using Gloobster.Portal.ViewModels
@model NewWikiModelBase

<div class="breadcrumb">

    @{
        var bc = Model.GetBreadcrumb();
        var cnt = bc.Count;
    }
    
    @for (int act = 0; act <= cnt - 1; act++)
    {
        var item = bc[act];
        bool isLast = act == (cnt - 1);
        if (isLast)
        {
            <span class="item black">@item.Name</span>            
        }
        else
        {
            <a href="@item.Link" class="item">@item.Name</a>
            <span class="arrow">&#62;</span>            
        }
    }
</div>