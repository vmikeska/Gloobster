@using System.Threading.Tasks
@using Gloobster.Portal.ViewModels
@model WikiModelBase
<script>
    function onBodyLoad() {

        var articleId = "@Model.ArticleId";
        var type = @((int)Model.Texts.Type);
        var photoGID = @Model.PhotoGID;

        @if (Model.IsAdmin)
        {
            @Html.Raw("currentView = new Views.WikiAdminPageView(articleId, type, photoGID);")
        }
        else
        {
            @Html.Raw("currentView = new Views.WikiPageView(articleId, type, photoGID);")
        }
    }

</script>
