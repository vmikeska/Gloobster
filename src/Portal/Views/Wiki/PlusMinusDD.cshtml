@using System.Threading.Tasks
@using Gloobster.Portal.ViewModels
@model DdVM

@{
    bool? liked = Model.Liked;

    var likeClass = "icon-plus";
    var dislikeClass = "icon-minus";
    if (liked.HasValue)
    {
        if (liked.Value)
        {
            likeClass += "Red";
        }
        else
        {
            dislikeClass += "Red";
        }
    }

}

<a title="@Model.B.W("Like")" class="button-icon @likeClass pmBtn" data-like="true" href="#"></a>
<a title="@Model.B.W("Dislike")" class="button-icon @dislikeClass pmBtn" data-like="false" href="#"></a>
