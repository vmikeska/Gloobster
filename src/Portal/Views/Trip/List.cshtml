    </div>*@

<script>
    function onBodyLoad() {
        currentView = new Views.TripListView();

        $(".editBtn").click((e) => {
            e.preventDefault();
            var $t = $(e.target);
            window.location.href = '/@RoutingConsts.TripEditMenuName/' + $t.data("id");
        });
    }
</script>