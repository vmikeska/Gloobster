            </div>
        </div>
        <div class="cell">
            <textarea id="newTrip" placeholder="@Model.W("NewTripName")"></textarea>
        </div>
        <div class="cell"></div>
        <div class="cell"></div>
        <div class="cell"></div>
        <div class="cell">
            <a class="lbtn2 btn-create" href="javascript:currentView.createNewTrip();">@Model.W("Create")</a>
        </div>
    </div>


</script>





