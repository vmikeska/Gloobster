<script id="fileItem-template" type="text/x-handlebars-template">
    <div class="cell">
        <div class="document table">
            <div class="cell middle">
                <a class="file {{fileType}}" href="/Trip/GetFile?fileId={{id}}&tripId={{tripId}}">
                    <span class="display-none">{{fileName}}</span>
                </a>
            </div>
            <div class="cell middle nowrap">
                
                {{#if canManipulate}}
                    <input class="filePublic filePublic{{id}}" id="filePublic{{id}}_a" data-id="{{id}}" type="checkbox" />
                    <label title="@Model.W("ShareTitle")" class="mleft10" for="filePublic{{id}}_a">@Model.W("Share")</label>
                {{/if}}

                <a href="/Trip/GetFile?fileId={{id}}&tripId={{tripId}}">{{fileName}}</a>
            </div>
            <div class="cell middle">
                <a class="delete popup-target" data-target="#popup-delete" data-id="{{id}}" href="#"></a>                
            </div>
        </div>
    </div>	
    
    
</script>

<script id="placeTravelTime-template" type="text/x-handlebars-template">
    <div class="table row margin dates">
        <div class="cell">
            <strong>{{infoTxt}}</strong>
            <br />
            <input id="timeVis" type="checkbox" />
            <label class="mleft10" for="timeVis">@Model.W("UseExactTime")</label>
        </div>
        <div class="cell">
            {{#if showLeft}}
            <input type="text" id="{{dir1}}Date" class="mdd" />
            <span class="time">&nbsp;</span>
            <input id="{{dir1}}Hours" class="mtd time" type="number" min="0" max="23" step="1" /><span class="time"> : </span><input id="{{dir1}}Minutes" class="mtd time" type="number" min="0" max="59" step="1" />
            {{/if}}
            
            {{#if showMiddle}} 
            <strong class="deli">→</strong>
            {{/if}}

            {{#if showRight}}
            <input type="text" id="{{dir2}}Date" class="mdd" />
            <span class="time">&nbsp;</span>
            <input id="{{dir2}}Hours" class="mtd time" type="number" min="0" max="23" step="1" /><span class="time"> : </span><input id="{{dir2}}Minutes" class="mtd time" type="number" min="0" max="59" step="1" />
            {{/if}}
        </div>

    </div>
</script>

