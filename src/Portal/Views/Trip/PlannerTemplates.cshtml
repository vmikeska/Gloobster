<script id="place-template" type="text/x-handlebars-template">
		<div id="{{id}}" data-row="{{rowNo}}" class="cell">
								
		{{#if isActive}}
				<div class="destination active">
		{{else}}
				<div class="destination">
		{{/if}}
						<span class="name">{{name}}</span>
								<span class="tab">arrival {{arrivalDateLong}}</span>
						</div>
												
				{{#if isFirstDay}}
						<div class="timeline green" style="text-align: center">{{leavingDate}}</div>
				{{else}}
						<div class="timeline {{colorClassArriving}} arrivingDate">{{arrivingDate}}</div>
						<div class="timeline {{colorClassLeaving}} leavingDate">{{leavingDate}}</div>
				{{/if}}
				
		</div>

</script>


