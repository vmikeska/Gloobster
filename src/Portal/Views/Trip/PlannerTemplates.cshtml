<script id="place-template" type="text/x-handlebars-template">
	
    <div id="{{id}}" data-no="{{no}}" class="placeCont block">

        <div class="timeline-cont">
            {{#if isFirstDay}}
            <div class="timeline green"><a class="leavingDate dateLink" href="#">{{leavingDate}}</a></div>
            {{else}}
            <div class="timeline l {{colorClassArriving}}"><a class="arrivingDate dateLink" href="#">{{arrivingDate}}</a></div>
            <div class="timeline {{colorClassLeaving}}"><a class="leavingDate dateLink" href="#">{{leavingDate}}</a></div>
            {{/if}}
        </div>

        {{#if isActive}}
        <div class="destination active">
            <span class="name">{{name}}</span>
        </div>
        {{else}}
        <div class="destination">
            <span class="name">{{name}}</span>            
        </div>
        
        {{/if}}
        
        <div class="tab-cont">            
        </div>
        

    </div>

</script>


