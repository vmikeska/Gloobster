<script id="place-template" type="text/x-handlebars-template">
	
    <div id="{{id}}" data-row="{{rowNo}}" class="cell placeCont">
								
	{{#if isActive}}
			<div class="destination active">
	{{else}}
			<div class="destination">
	{{/if}}
			    <span class="name">{{name}}</span>
                
            {{#unless isFirstDay}}
                <span class="tab">@Model.W("Arrival") {{arrivalDateLong}}</span>
            {{/unless}}

			</div>
												
				{{#if isFirstDay}}
						<div class="timeline green" style="text-align: center"><a class="leavingDate" href="#">{{leavingDate}}</a></div>
				{{else}}
						<div class="timeline {{colorClassArriving}}"><a class="arrivingDate dateLink" href="#">{{arrivingDate}}</a></div>
						<div class="timeline {{colorClassLeaving}}"><a class="leavingDate dateLink" href="#">{{leavingDate}}</a></div>
				{{/if}}
				
	</div>

</script>


<script id="visitItem-template" type="text/x-handlebars-template">
		<div data-id="{{id}}" class="place">            
            <span class="{{icon}} left mright10"></span>
            
