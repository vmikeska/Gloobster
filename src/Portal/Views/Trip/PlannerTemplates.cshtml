<script id="place-template" type="text/x-handlebars-template">
	
    <div id="{{id}}" data-row="{{rowNo}}" class="cell">
								
	{{#if isActive}}
			<div class="destination active">
	{{else}}
			<div class="destination">
	{{/if}}
			    <span class="name">{{name}}</span>
                
            {{#unless isFirstDay}}
                <span class="tab">@Model.W("Arrival") {{arrivalDateLong}}</span>
            {{/unless}}

			</div>
												
				{{#if isFirstDay}}
						<div class="timeline green" style="text-align: center"><a class="leavingDate" href="#">{{leavingDate}}</a></div>
				{{else}}
						<div class="timeline {{colorClassArriving}}"><a data-pid="{{arrivingId}}" class="arrivingDate dateLink" href="#">{{arrivingDate}}</a></div>
						<div class="timeline {{colorClassLeaving}}"><a data-pid="{{leavingId}}" class="leavingDate dateLink" href="#">{{leavingDate}}</a></div>
				{{/if}}
				
	</div>

</script>


