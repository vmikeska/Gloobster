<div id="dialogUpload" class="upload-holder">
    <div class="txt">
        <textarea id="dialogDescription" placeholder="Description or related files"></textarea>
    </div>

    <div class="documents-all">
        <div id="entityDocs" class="documents"></div>
    </div>

    
    <div class="upload-droparea" style="display: none">
        <div class="center-vertical">
            <div class="centered">
                <strong>@Model.W("DropFilesHere")</strong>
                @Html.Partial("ProgressBar", "")
            </div>
        </div>
    </div>
</div>