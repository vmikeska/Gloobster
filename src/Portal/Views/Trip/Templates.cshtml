<script id="comment-template" type="text/x-handlebars-template">

		<div class="row">
				<div class="cell">
						<span class="thumbnail">
							<img src="{{photoUrl}}">								
						</span>
				</div>
				<div class="cell">
						<div class="author">
								<a href="/PortalUser/Detail/{{id}}"><strong>{{displayName}}</strong></a>
								<span> • {{displayDate}}</span>
						</div>
						<div class="bubble">
								{{text}}
						</div>
				</div>
		</div>

</script>

<script id="file-template" type="text/x-handlebars-template">
		<div class="cell">
				<div class="document">
						<a class="file {{fileType}}" href="/Trip/GetFile?fileId={{fileId}}&tripId={{tripId}}">{{fileName}}</a>
						<a class="delete popup-target" data-target="#popup-delete" data-id="{{fileId}}" href="#">Delete file</a>						
				</div>
		</div>
</script>

<script id="fileCreate-template" type="text/x-handlebars-template">
        <div class="box">
            <div class="box__input">              
                <input type="file" name="files[]" id="{{id}}" class="box__file" data-multiple-caption="{count} files selected" multiple="">

                <label for="{{id}}">
                    <strong>Add file</strong>                    
                </label>
            </div>
        </div>
</script>