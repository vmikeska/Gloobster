@using Gloobster.Portal.ViewModels
@using System.Linq
@using Gloobster.Enums
@model SettingsViewModel

<script type="text/javascript" src="@Url.Content("~/js/Views/SettingsView.js")"></script>

<style>

.titleName {
    font-weight: bold;
}

.avatar {
    width: 240px;
    height: 240px;
    border:1px solid black;
}

.avatarFile input
{
	width: 0.1px;
	height: 0.1px;
	opacity: 0;
	overflow: hidden;
	position: absolute;
	z-index: -1;
}

.avatarFile label {
    font-size: 20px;
    cursor: pointer;
}

.controls {
    margin-top: 15px;
}

.pairing {
    margin-top: 20px;
    padding-top: 5px;
    padding-bottom: 5px;
    border-top: 1px solid black;
    border-bottom: 1px solid black;
    text-align: center;
}

</style>

    <div class="table row col2 margin">
        <div class="cell">
            <div class="table row">
                <div class="cell middle">
                    <h2>Settings</h2>
                </div>

            </div>
        </div>

    </div>

    <div>
        <img id="avatar" class="avatar" src="@Model.AvatarLink" />
        <br />
        <a class="button avatarFile" href="#">
            <input type="file" id="avatarFile" />

            <label for="avatarFile">
                <span>Change photo</span>
            </label>
        </a>
    </div>

    <table class="controls">       
        <tr>
            <td>
                <span class="titleName">Display name</span>
            </td>
            <td>
                <input id="displayName" type="text" value="@Model.DisplayName" />
            </td>
        </tr>
        <tr>
            <td>
                <span class="titleName">Gender</span>
            </td>
            <td>
                <div id="gender" class="dropdown left">
                    <span class="selected">@Model.Gender</span>
                    <ul>
                        @*<li data-value="0">N/A</li>*@
                        <li data-value="1">Male</li>
                        <li data-value="2">Female</li>
                    </ul>
                    <input type="hidden" value="0">
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <span class="titleName">Home city</span>
            </td>
            <td>
                <div id="homeCity" class="dropdown left">
                    <input class="inputed" type="text" placeholder="City name" value="@Model.HomeLocation">
                    <ul></ul>
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <span class="titleName">Current city</span>
            </td>
            <td>
                <div id="currentCity" class="dropdown left">
                    <input class="inputed" type="text" placeholder="City name" value="@Model.CurrentLocation">
                    <ul></ul>
                </div>
            </td>
        </tr>
    </table>

    <div class="logins pairing">
        @if (!Model.HasSocNet(SocialNetworkType.Facebook))
        {
            <a id="fbBtnPair" class="facebook" href="#">Pair with Facebook</a>
        }

        @if (!Model.HasSocNet(SocialNetworkType.Twitter))
        {
            <a id="twitterBtnPair" class="twitter" href="#">Pair with Twitter</a>
        }

        @if (!Model.HasSocNet(SocialNetworkType.Google))
        {
            <a id="googleBtnPair" class="google" href="#">Pair with Google</a>
        }       
    </div>


<script>
    function onBodyLoad() {
        currentView = new Views.SettingsView();
    }
</script>
